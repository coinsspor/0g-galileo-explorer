# ===================================
# 0G Galileo Explorer Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ===================================
# FRONTEND CONFIGURATION
# ===================================

# API Endpoints (Production)
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_V2_URL=http://localhost:3002
REACT_APP_UPTIME_API_URL=http://localhost:3004

# Wallet Connection
REACT_APP_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Google Analytics (Optional)
REACT_APP_GA_TRACKING_ID=

# Environment
REACT_APP_ENV=development

# ===================================
# API PORT 3001 - VALIDATOR API
# ===================================

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=900
CACHE_TTL_LONG=3600

# EVM RPC URLs (0G Network)
MAIN_EVM_RPC=https://evmrpc-testnet.0g.ai
BACKUP_EVM_RPC_1=https://evmrpc-testnet.0g.ai
BACKUP_EVM_RPC_2=https://evmrpc-testnet.0g.ai

# Cosmos RPC URLs (0G Network)
COSMOS_RPC_URL=https://rpc-testnet.0g.ai
COSMOS_API_URL=https://api-testnet.0g.ai

# Smart Contract Addresses (0G Testnet)
STAKING_CONTRACT_ADDRESS=0x684F14C13e787172c5Cb0fF963fA6B0D5b0C0225
TOKEN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Database (Optional - for future use)
DATABASE_URL=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ===================================
# API PORT 3002 - BLOCKCHAIN API
# ===================================

# Server Configuration
API_V2_PORT=3002
API_V2_NODE_ENV=development

# 0G Network Configuration
API_V2_MAIN_EVM_RPC=https://evmrpc-testnet.0g.ai
API_V2_COSMOS_RPC=https://rpc-testnet.0g.ai
API_V2_COSMOS_API=https://api-testnet.0g.ai

# Contract Addresses
API_V2_STAKING_CONTRACT=0xea224dBB52F5779768c8366Be1Bd36577Bf1790E

# Cache Settings
API_V2_CACHE_TTL=300

# ===================================
# API PORT 3004 - UPTIME API
# ===================================

# Server Configuration
UPTIME_API_PORT=3004
UPTIME_NODE_ENV=development

# 0G Network
UPTIME_COSMOS_RPC=https://rpc-testnet.0g.ai
UPTIME_COSMOS_API=https://api-testnet.0g.ai

# Cache Configuration
UPTIME_CACHE_TTL=60

# ===================================
# MONITORING & ALERTS (Optional)
# ===================================

# Sentry (Error Tracking)
SENTRY_DSN=

# Prometheus Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Webhook for Alerts
ALERT_WEBHOOK_URL=

# ===================================
# SECURITY
# ===================================

# JWT Secret (for future authentication)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# API Keys (if needed)
API_KEY=
SECRET_KEY=

# ===================================
# DEVELOPMENT TOOLS
# ===================================

# Debug Mode
DEBUG=false

# Mock Data (for testing)
USE_MOCK_DATA=false

# ===================================
# NOTES
# ===================================
# 1. Never commit .env file to git
# 2. Always use different values for production
# 3. Keep this file updated when adding new variables
# 4. Use strong, unique values for secrets
# 5. Rotate keys regularly in production
